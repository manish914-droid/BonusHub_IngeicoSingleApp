<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edge_blue_bg_white">

    <RelativeLayout
        android:id="@+id/relLayDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:padding="15dp">

        <View
            android:id="@+id/viewCenterHorizontal"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txtViewBankTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/viewCenterHorizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/muli_light"
            android:text="Bank:"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/txtViewBankTitle"
            android:fontFamily="@font/muli_light"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewProductNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewBank"
            android:layout_alignEnd="@+id/viewCenterHorizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/muli_light"
            android:text="Product Name:"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewBank"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtViewBankTitle"
            android:fontFamily="@font/muli_light"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:id="@+id/txtViewCategoryNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewProductName"
            android:layout_alignEnd="@+id/viewCenterHorizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/muli_light"
            android:text="Category Name:"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewProductName"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtViewBankTitle"
            android:fontFamily="@font/muli_light"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewTenureTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewCategoryName"
            android:layout_alignEnd="@+id/viewCenterHorizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/muli_light"
            android:text="Tenure:"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewTenure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewCategoryName"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtViewBankTitle"
            android:fontFamily="@font/muli_light"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewTransactionAmountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewTenure"
            android:layout_alignEnd="@+id/viewCenterHorizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/muli_light"
            android:text="Transaction Amount:"
            android:textColor="@color/txt_color"
            android:gravity="end"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:id="@+id/txtViewTransactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewTenure"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtViewBankTitle"
            android:fontFamily="@font/muli_light"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_small" />
        <!--EMI Amount:-->
        <TextView
            android:id="@+id/txtViewEmiAmountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewTransactionAmount"
            android:layout_alignEnd="@+id/viewCenterHorizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/muli_light"
            android:text="EMI Amount:"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewEmiAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewTransactionAmount"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtViewBankTitle"
            android:fontFamily="@font/muli_light"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_small" />

        <!--Net Pay Amount:-->
        <TextView
            android:id="@+id/txtViewNetPayAmountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewEmiAmount"
            android:layout_alignEnd="@+id/viewCenterHorizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/muli_light"
            android:text="Net Pay Amount:"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewNetPayAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewEmiAmount"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtViewBankTitle"
            android:fontFamily="@font/muli_light"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_small" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLayDetails"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/edge_blue_bg_white"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textColor="@color/txt_color"
            android:fontFamily="@font/muli_regular"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/txtViewConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/edge_white_bg_blue"
            android:gravity="center"
            android:padding="10dp"
            android:text="CONFIRM"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:fontFamily="@font/muli_regular"/>

    </LinearLayout>


</RelativeLayout>