<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.fragments.digi_pos.UpiCollectFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/sub_header_view"
            layout="@layout/sub_header_layout"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="@dimen/pad_15">

                <ImageView
                    android:id="@+id/imgViewAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rupay_circle_transparent"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/txtViewAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/muli_regular"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/text_size_regular"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="@dimen/pad_15">

                <ImageView
                    android:id="@+id/imgViewVpa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_vpa_transparent"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/txtViewVpa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/muli_regular"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/text_size_regular"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="@dimen/pad_15">

                <ImageView
                    android:id="@+id/imgViewMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mobile_transparent"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/txtViewMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/muli_regular"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/text_size_regular"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!--ENTER DESCRIPTION (OPTIONAL)-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/enter_description_crd_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/pad_16"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="@dimen/pad_16"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:visibility="visible">

                <EditText
                    android:id="@+id/enter_description_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edge_blue_bg_white"
                    android:drawableStart="@drawable/ic_description"
                    android:drawablePadding="@dimen/pad_16"
                    android:ems="10"
                    android:fontFamily="@font/muli_regular"
                    android:gravity="start|center_vertical"
                    android:hint="ENTER DESCRIPTION (OPTIONAL)"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="20"
                    android:padding="@dimen/pad_16"
                    android:textColor="@color/txt_color"
                    android:textColorHint="@color/colorGrey"
                    android:textSize="@dimen/text_size_regular" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/btnProceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/edge_button_blue"
                android:drawablePadding="10dp"
                android:fontFamily="@font/muli_regular"
                android:gravity="center"
                android:paddingStart="30dp"
                android:paddingTop="9dp"
                android:paddingEnd="30dp"
                android:paddingBottom="9dp"
                android:text="Proceed"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>