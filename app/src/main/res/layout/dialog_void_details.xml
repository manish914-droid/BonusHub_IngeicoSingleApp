<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edge_blue">

    <RelativeLayout
        android:id="@+id/relLayDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/txtViewVoidSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edge_blue_bg_white"
            android:fontFamily="@font/muli_regular"
            android:paddingStart="40dp"
            android:paddingTop="5dp"
            android:paddingEnd="40dp"
            android:paddingBottom="5dp"
            android:text="@string/void_sale"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/text_size_small" />

        <View
            android:id="@+id/viewCenterHorizontal"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txtViewDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewVoidSale"
            android:layout_alignEnd="@+id/viewCenterHorizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/muli_light"
            android:text="@string/date_colon"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewVoidSale"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/txtViewDateTitle"
            android:fontFamily="@font/muli_light"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_regular" />

        <TextView
            android:id="@+id/txtViewTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewDateTitle"
            android:layout_alignEnd="@+id/viewCenterHorizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/muli_light"
            android:text="@string/time_colon"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewDateTitle"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtViewDateTitle"
            android:fontFamily="@font/muli_light"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_regular" />

        <TextView
            android:id="@+id/txtViewTidTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewTimeTitle"
            android:layout_alignEnd="@+id/viewCenterHorizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/muli_light"
            android:text="@string/tid_colon"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewTid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewTimeTitle"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtViewDateTitle"
            android:fontFamily="@font/muli_light"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_regular" />

        <TextView
            android:id="@+id/txtViewInvoiceNumberTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewTidTitle"
            android:layout_alignEnd="@+id/viewCenterHorizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/muli_light"
            android:text="@string/invoice_number_colon"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewInvoiceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewTidTitle"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtViewDateTitle"
            android:fontFamily="@font/muli_light"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_regular" />

        <TextView
            android:id="@+id/txtViewTotalAmountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewInvoiceNumberTitle"
            android:layout_alignEnd="@+id/viewCenterHorizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/muli_light"
            android:text="@string/total_amount_colon"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txtViewTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewInvoiceNumberTitle"
            android:layout_marginStart="@dimen/pad_20"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtViewDateTitle"
            android:fontFamily="@font/muli_light"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_regular" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLayDetails"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViewCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/edge_bg_white"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textColor="@color/txt_color"
            android:fontFamily="@font/muli_regular"
            android:textSize="@dimen/text_size_xsmall" />


        <TextView
            android:id="@+id/txtViewOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/edge_white_bg_blue"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/ok"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xsmall"
            android:fontFamily="@font/muli_regular"/>

    </LinearLayout>


</RelativeLayout>