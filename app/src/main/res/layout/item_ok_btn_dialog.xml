<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_edge"
    android:padding="@dimen/pad_16">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hello"
        android:textAllCaps="true"
        android:textColor="@color/txt_color"
        android:textSize="@dimen/text_size_large"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/msgTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_10"
        android:gravity="center"
        android:text="this is msg"
         android:textColor="@color/txt_color"
        android:textSize="@dimen/text_size_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTv" />

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_10"
        android:gravity="center"

        android:paddingStart="@dimen/pad_32"
        android:paddingTop="@dimen/pad_16"
        android:paddingEnd="@dimen/pad_32"
        android:paddingBottom="@dimen/pad_16"
        android:text="@string/key_ok"
        android:textAllCaps="true"
         android:textColor="@color/txt_color"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/msgTv"
        android:background="@drawable/card_edge"
 

        />


</androidx.constraintlayout.widget.ConstraintLayout>