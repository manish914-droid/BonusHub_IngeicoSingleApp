<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".view.fragments.digi_pos.UpiSmsDynamicPayQrInputDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/sub_header_view"
            layout="@layout/sub_header_layout"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--Enter Amount-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/enter_amount_crd_view"
            style="@style/TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_20"
            android:layout_marginTop="@dimen/pad_10"
            android:layout_marginRight="@dimen/pad_20"
            android:hint="@string/enter_amount"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub_header_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/amount_et"
                style="@style/TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_rupay_circle"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="11"
                android:padding="@dimen/pad_8" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--VPA-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/vpa_crd_view"
            style="@style/TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_20"
            android:layout_marginTop="@dimen/pad_10"
            android:layout_marginRight="@dimen/pad_20"
            android:hint="@string/vpa"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_amount_crd_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vpa_et"
                style="@style/TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_vpa"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:padding="@dimen/pad_8" />

        </com.google.android.material.textfield.TextInputLayout>


        <!--Mobile NUMBER-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mobile_number_crd_view"
            style="@style/TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_20"
            android:layout_marginTop="@dimen/pad_10"
            android:layout_marginRight="@dimen/pad_20"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vpa_crd_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mobile_number_et"
                style="@style/TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_mobile"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                android:padding="@dimen/pad_8" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--ENTER DESCRIPTION (OPTIONAL)-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/enter_description_crd_view"
            style="@style/TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_20"
            android:layout_marginTop="@dimen/pad_10"
            android:layout_marginRight="@dimen/pad_20"
            android:hint="@string/enter_description_optional"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mobile_number_crd_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enter_description_et"
                style="@style/TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_description"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="20"
                android:maxLines="4"
                android:padding="@dimen/pad_8" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/btnProceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_20"
            android:background="@drawable/edge_blue3"
            android:fontFamily="@font/muli_regular"
            android:maxLines="1"
            android:paddingStart="@dimen/pad_30"
            android:paddingTop="@dimen/pad_15"
            android:paddingEnd="@dimen/pad_30"
            android:paddingBottom="@dimen/pad_15"
            android:text="Proceed"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_description_crd_view" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>