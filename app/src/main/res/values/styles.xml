<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="VerifoneToolbarStyle" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textColor">@color/text_active</item>


    </style>

    <style name="Widget.Neumorph.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:minHeight">72dip</item>
        <item name="android:minWidth">112dip</item>
        <item name="android:paddingLeft">@dimen/design_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/design_btn_padding_right</item>
        <item name="android:paddingTop">@dimen/design_btn_padding_top</item>
        <item name="android:paddingBottom">@dimen/design_btn_padding_bottom</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="color">@color/init_button</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">@dimen/pad_15</item>
        <item name="cardCornerRadius">10dp</item>
    </style>
    <!-- Using in Keyboard. -->
    <style name="Keyboard_Btn_Neumorphic" parent="Widget.AppCompat.Button">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">57dp</item>
    <item name="android:layout_margin">1dp</item>
    <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item></style>
    <style name="MAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Using in EMICatalogue. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Using in BaseActivity. -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_exit</item>
    </style>



</resources>